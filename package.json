{
  "name": "@near-citizens/root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:verification": "pnpm --filter verified-accounts dev",
    "dev:governance": "pnpm --filter @near-citizens/citizens-house dev",
    "dev:all": "pnpm --parallel --filter \"./apps/*\" dev",
    "build:verification": "pnpm --recursive --filter \"./packages/*\" run type-check && pnpm --filter verified-accounts build",
    "build:governance": "pnpm --recursive --filter \"./packages/*\" run type-check && pnpm --filter @near-citizens/citizens-house build",
    "build:all": "pnpm --recursive --filter \"./packages/*\" run type-check && pnpm --parallel --filter \"./apps/*\" build",
    "build:contract": "pnpm --filter verified-accounts build:contract",
    "build:contract:verification": "cd contracts/verified-accounts && cargo near build non-reproducible-wasm",
    "build:contract:bridge": "cd contracts/sputnik-bridge && cargo near build non-reproducible-wasm",
    "build:contracts:all": "pnpm run build:contract:verification && pnpm run build:contract:bridge",
    "test:contract:verification": "cd contracts/verified-accounts && cargo test --features testing -- --test-threads=1",
    "test:contract:bridge": "cd contracts/sputnik-bridge && cargo test --features testing -- --test-threads=1",
    "test:contract:sputnik-dao-interface": "cd contracts/sputnik-dao-interface && cargo test -- --test-threads=1",
    "test:contract:verified-accounts-interface": "cd contracts/verified-accounts-interface && cargo test -- --test-threads=1",
    "test:contracts:all": "pnpm run test:contract:verification && pnpm run test:contract:bridge && pnpm run test:contract:sputnik-dao-interface && pnpm run test:contract:verified-accounts-interface",
    "lint:contract": "cd contracts/verified-accounts && cargo clippy --all-targets -- -D warnings",
    "lint:contract:verification": "cd contracts/verified-accounts && cargo clippy --all-targets -- -D warnings",
    "lint:contract:bridge": "cd contracts/sputnik-bridge && cargo clippy --all-targets -- -D warnings",
    "lint:contracts:all": "pnpm run lint:contract:verification && pnpm run lint:contract:bridge",
    "lint:contract:fix": "cd contracts/verified-accounts && cargo clippy --fix --allow-dirty --allow-staged",
    "lint:contract:fix:verification": "cd contracts/verified-accounts && cargo clippy --fix --allow-dirty --allow-staged",
    "check:contract:verification": "cd contracts/verified-accounts && rustup target add wasm32-unknown-unknown && cargo check --target wasm32-unknown-unknown",
    "deploy:testnet": "pnpm --filter verified-accounts deploy:testnet",
    "deploy:testnet:verification": "pnpm --filter verified-accounts deploy:testnet",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "lint:all": "pnpm run lint && pnpm run lint:contracts:all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm --recursive test",
    "test:watch": "pnpm --recursive test:watch",
    "test:all": "pnpm run test && pnpm run test:contracts:all",
    "test:report": "pnpm run test:all && allure generate allure-results -o allure-report --clean && allure open allure-report",
    "test:report:generate": "allure generate allure-results -o allure-report --clean",
    "test:report:open": "allure open allure-report",
    "test:report:serve": "allure serve allure-results",
    "clean": "pnpm --recursive --parallel exec rm -rf .next dist node_modules .turbo",
    "clean:contracts": "cd contracts/verified-accounts && cargo clean",
    "clean:contracts:verification": "cd contracts/verified-accounts && cargo clean",
    "clean:contracts:bridge": "cd contracts/sputnik-bridge && cargo clean",
    "clean:contracts:all": "pnpm run clean:contracts:verification && pnpm run clean:contracts:bridge"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.0.10",
    "allure-js-commons": "^3.4.3",
    "allure-vitest": "^3.4.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "typescript": "^5",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@10.25.0"
}
