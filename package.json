{
  "name": "@near-citizens/root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:verification": "pnpm --filter verified-accounts dev",
    "dev:governance": "pnpm --filter citizens-house dev",
    "dev:all": "pnpm --parallel --filter \"./apps/*\" dev",
    "build:verification": "pnpm --recursive --filter \"./packages/*\" run type-check && pnpm --filter verified-accounts build",
    "build:governance": "pnpm --recursive --filter \"./packages/*\" run type-check && pnpm --filter citizens-house build",
    "build:all": "pnpm --recursive --filter \"./packages/*\" run type-check && pnpm --parallel --filter \"./apps/*\" build",
    "build:contract": "pnpm --filter verified-accounts build:contract",
    "deploy:testnet": "pnpm --filter verified-accounts deploy:testnet",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "lint:contract": "cd contracts/verified-accounts && cargo clippy --all-targets -- -D warnings",
    "lint:contract:fix": "cd contracts/verified-accounts && cargo clippy --fix --allow-dirty --allow-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm --recursive test",
    "test:watch": "pnpm --recursive test:watch",
    "clean": "pnpm --recursive --parallel exec rm -rf .next dist node_modules .turbo",
    "clean:contracts": "cd contracts/verified-accounts && cargo clean"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "typescript-eslint": "^8.47.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.0"
}
